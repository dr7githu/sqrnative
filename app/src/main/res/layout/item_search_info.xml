<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <LinearLayout
            android:id="@+id/linear_root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/drawable_color_selector">
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/colorBlack1"/>
            <TextView
                android:id="@+id/textview_num"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:textColor="@color/colorBlack1"
                android:textSize="23dp"
                android:text="허가신고번호"
                android:gravity="center"/>
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/colorBlack1"/>
            <TextView
                android:id="@+id/textview_gubun"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:textColor="@color/colorBlack1"
                android:textSize="23dp"
                android:text="구분"
                android:gravity="center"/>
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/colorBlack1"/>
            <TextView
                android:id="@+id/textview_useage"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:textColor="@color/colorBlack1"
                android:textSize="23dp"
                android:text="용도"
                android:gravity="center"/>
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/colorBlack1"/>
            <TextView
                android:id="@+id/textview_useage_detail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:textColor="@color/colorBlack1"
                android:textSize="23dp"
                android:text="세부용도"
                android:gravity="center"/>
        </LinearLayout>
        <ImageButton
            android:id="@+id/imagebtn_click"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:src="@null"/>
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorBlack1"/>
</LinearLayout>
