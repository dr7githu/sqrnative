<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#66000000">

    <LinearLayout
        android:id="@+id/linear_admob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:orientation="vertical"
        android:background="@drawable/rect_black1"
        android:layout_gravity="bottom"/>

    <!-- layout_marginLeft, layout_marginRight : 전체 화면에서 좌우측 마진값 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:background="@drawable/bg_popup"
        android:orientation="vertical"
        android:padding="0dp"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp" >

            <TextView
                android:id="@+id/textview_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:text="알림"
                android:textColor="@color/colorBlack4"
                android:textSize="32dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textview_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="사용자정보를 입력해 주세요!"
                android:textColor="@color/colorBlack1"
                android:textSize="28dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ff777777" />

        <!-- 확인 -->
        <LinearLayout
            android:id="@+id/linearlayout_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="0px"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@drawable/drawable_btn_alert"
                android:textSize="30sp"
                android:text="@string/btn_ok"
                android:textColor="@color/colorBlack1"/>
        </LinearLayout>

        <!-- 확인/취소 -->
        <LinearLayout
            android:id="@+id/linearlayout_okcancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone" >

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0px"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@drawable/drawable_btn_alert"
                android:textSize="30sp"
                android:text="@string/btn_cancel"
                android:textColor="@color/colorBlack1"/>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#ff777777" />

            <Button
                android:id="@+id/btn_ok2"
                android:layout_width="0px"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@drawable/drawable_btn_alert"
                android:textSize="30sp"
                android:text="@string/btn_ok"
                android:textColor="@color/colorBlack1"/>
            
        </LinearLayout>
        
    </LinearLayout>

</FrameLayout>